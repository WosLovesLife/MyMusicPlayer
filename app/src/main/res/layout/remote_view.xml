<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/remote_view_open"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/colorSeekBarTime"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/remote_view_icon"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:src="@mipmap/icon_launcher"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <TextView
            android:id="@+id/remote_view_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:lines="1"
            android:textColor="@color/colorItemText"
            android:textSize="16sp"
            tools:text="歌名"/>

        <TextView
            android:id="@+id/remote_view_singer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/remote_view_name"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:lines="1"
            android:textColor="@color/colorItemText"
            android:textSize="12sp"
            tools:text="歌手"/>

        <ImageView
            android:id="@+id/remote_view_pre_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/remote_view_singer"
            android:background="@drawable/ripple_remote_view_btn_bg"
            android:clickable="true"
            android:padding="8dp"
            android:src="@drawable/note_btn_pre_white"/>

        <ImageView
            android:id="@+id/remote_view_play_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/remote_view_singer"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ripple_remote_view_btn_bg"
            android:clickable="true"
            android:src="@drawable/note_btn_play_white"/>

        <ImageView
            android:id="@+id/remote_view_next_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/remote_view_singer"
            android:background="@drawable/ripple_remote_view_btn_bg"
            android:clickable="true"
            android:padding="8dp"
            android:src="@drawable/note_btn_next_white"/>
    </RelativeLayout>
</LinearLayout>